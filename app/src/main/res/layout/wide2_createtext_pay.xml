<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="2. 페이 방식을 선택하고 페이 방식에 따른 내용을 입력하세요"
            android:textSize="28dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bottom_line"/>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:columnCount="2"
            android:rowCount="2"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn1"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="27dp"
                android:layout_marginTop="10dp"
                android:text="협의"
                android:textSize="30dp"
                android:textColor="@color/white"/>
            <Button
                android:id="@+id/btn2"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="27dp"
                android:layout_marginTop="10dp"
                android:text="금전"
                android:textSize="30dp"
                android:textColor="@color/white"/>
            <Button
                android:id="@+id/btn3"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="27dp"
                android:layout_marginTop="10dp"
                android:text="봉사시간"
                android:textSize="25dp"
                android:textColor="@color/white"/>
            <Button
                android:id="@+id/btn4"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="27dp"
                android:layout_marginTop="10dp"
                android:text="페이없음"
                android:textSize="25dp"
                android:textColor="@color/white"/>
        </GridLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="페이 내용                                               "
            android:textSize="28dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bottom_line"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/layout2_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:visibility="invisible">
                <EditText
                    android:id="@+id/edit_pay1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="30dp"
                    android:hint="제공 받거나 지불할 금액을 입력하세요"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/btn_check2_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="24dp"
                    android:text="확인"
                    android:layout_weight="4"
                    android:background="@drawable/button_yellow"
                    app:backgroundTint="@null"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout2_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:visibility="invisible">
                <EditText
                    android:id="@+id/edit_pay2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="30dp"
                    android:hint="제공 받거나 지불할 봉사시간을 입력하세요"
                    android:layout_weight="1"
                    />
                <Button
                    android:id="@+id/btn_check2_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="24dp"
                    android:text="확인"
                    android:layout_weight="4"
                    android:background="@drawable/button_yellow"
                    app:backgroundTint="@null"/>
            </LinearLayout>
        </FrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="작성 내용 결과                                     "
            android:textSize="28dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bottom_line"/>
        <GridLayout
            android:id="@+id/layout2_3"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:columnCount="2"
            android:rowCount="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_result2_1"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="27dp"
                android:layout_marginTop="10dp"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:visibility="invisible"/>
            <Button
                android:id="@+id/btn_result2_2"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="27dp"
                android:layout_marginTop="10dp"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:visibility="invisible"/>
        </GridLayout>
        <Button
            android:id="@+id/btn_check2_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="24dp"
            android:text="다음"
            android:layout_weight="3"
            android:background="@drawable/button_yellow"
            app:backgroundTint="@null"/>

    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>