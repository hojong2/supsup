<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="1. 글 제목을 키워드 선택이나 직접 작성 방법을 사용해 작성해주세요"
                android:textSize="28dp"
                android:layout_marginBottom="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btn_result1_1"
                        android:layout_width="140dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="10dp"
                        android:textSize="30dp"
                        android:textColor="@color/white"/>
                    <Button
                        android:id="@+id/btn_result1_2"
                        android:layout_width="140dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="25dp"
                        android:textColor="@color/white"/>
                </LinearLayout>
                <Button
                    android:id="@+id/btn_check1_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:text="확인"
                    android:textSize="24dp"
                    android:background="@drawable/button_yellow"
                    app:backgroundTint="@null">
                </Button>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="해주세요/해드려요"
                android:textSize="30dp"
                android:background="@drawable/bottom_line"
                android:layout_marginBottom="10dp"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:columnCount="2"
                android:rowCount="1"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn5"
                    android:layout_width="150dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="27dp"
                    android:layout_marginRight="27dp"
                    android:layout_marginTop="10dp"
                    android:text="해주세요"
                    android:textSize="25dp"
                    android:textColor="@color/white"/>
                <Button
                    android:id="@+id/btn6"
                    android:layout_width="150dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="27dp"
                    android:layout_marginRight="27dp"
                    android:layout_marginTop="10dp"
                    android:text="해드려요"
                    android:textSize="25dp"
                    android:textColor="@color/white"/>
            </GridLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="도움 키워드 선택"
                android:textSize="30dp"
                android:background="@drawable/bottom_line"
                android:layout_marginBottom="10dp"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <GridLayout
                    android:id="@+id/grid_helpyou"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:columnCount="2"
                    android:rowCount="2"
                    android:orientation="horizontal"
                    android:visibility="invisible">
                    <Button
                        android:id="@+id/btn1"
                        android:layout_width="150dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="27dp"
                        android:layout_marginRight="27dp"
                        android:layout_marginTop="10dp"
                        android:text="동행"
                        android:textSize="30dp"
                        android:textColor="@color/white"/>
                    <Button
                        android:id="@+id/btn2"
                        android:layout_width="150dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="27dp"
                        android:layout_marginRight="27dp"
                        android:layout_marginTop="10dp"
                        android:text="보호자"
                        android:textSize="30dp"
                        android:textColor="@color/white"/>
                    <Button
                        android:id="@+id/btn3"
                        android:layout_width="150dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="27dp"
                        android:layout_marginRight="27dp"
                        android:layout_marginTop="10dp"
                        android:text="작업"
                        android:textSize="30dp"
                        android:textColor="@color/white"/>
                    <Button
                        android:id="@+id/btn4"
                        android:layout_width="150dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="27dp"
                        android:layout_marginRight="27dp"
                        android:layout_marginTop="10dp"
                        android:text="대화"
                        android:textSize="30dp"
                        android:textColor="@color/white"/>
                </GridLayout>
                <GridLayout
                    android:id="@+id/grid_helpme"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:columnCount="3"
                    android:rowCount="2"
                    android:orientation="horizontal"
                    android:visibility="invisible"
                    >
                    <Button
                        android:id="@+id/btn1_1"
                        android:layout_width="115dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:text="시각"
                        android:textSize="30dp"
                        android:textColor="@color/white"/>
                    <Button
                        android:id="@+id/btn1_2"
                        android:layout_width="115dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:text="청각"
                        android:textSize="30dp"
                        android:textColor="@color/white"/>
                    <Button
                        android:id="@+id/btn1_3"
                        android:layout_width="115dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:text="노인"
                        android:textSize="30dp"
                        android:textColor="@color/white"/>
                    <Button
                        android:id="@+id/btn1_4"
                        android:layout_width="115dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:text="언어"
                        android:textSize="30dp"
                        android:textColor="@color/white"/>
                    <Button
                        android:id="@+id/btn1_5"
                        android:layout_width="115dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:text="지체"
                        android:textSize="30dp"
                        android:textColor="@color/white"/>
                    <Button
                        android:id="@+id/btn1_6"
                        android:layout_width="115dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:text="지적"
                        android:textSize="30dp"
                        android:textColor="@color/white"/>
                </GridLayout>
            </FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="직접 작성"
                android:textSize="30dp"
                android:background="@drawable/bottom_line"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="30dp"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/btn_check1_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="24dp"
                    android:text="확인"
                    android:layout_weight="4"
                    android:background="@drawable/button_yellow"
                    app:backgroundTint="@null"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>